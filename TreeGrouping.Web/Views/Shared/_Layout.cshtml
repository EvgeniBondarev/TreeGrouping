    .Ozon {
        color: #4a90e2; /* спокойный синий */
    }

    .Volna {
        color: #50b894; /* мягкий зелёный */
    }

    .CatTree {
        color: #f4a261; /* тёплый персиково-оранжевый */
    }

    .IC {
        color: #9b8ec8; /* мягкий сиреневый */
    }

