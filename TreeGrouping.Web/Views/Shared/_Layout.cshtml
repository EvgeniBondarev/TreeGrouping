<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - TreeGrouping.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/TreeGrouping.Web.styles.css" asp-append-version="true"/>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<header>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<style>
    nav {
        background-color: #f8f9fa;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        gap: 15px;
    }

    nav li {
        display: inline;
    }

    nav a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }

    nav a:hover {
        text-decoration: underline;
    }
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden; 
        
    }

    .container {
        height: 100vh; /* Высота контейнера на весь экран */
        display: flex;
        flex-direction: column;
    }

    .row {
        flex-grow: 1;
        display: flex;
        flex-wrap: wrap; /* Позволяет элементам переноситься */
        justify-content: space-between;
    }

    .tree-container {
        border: 1px solid #ddd;
        padding: 10px;
        flex: 1;
        height: 100vh; /* Высота на весь экран */
        overflow: hidden;
        min-width: 300px; /* Минимальная ширина */
        box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }

    .tree-scroll {
        height: calc(100vh - 120px); /* Учитываем высоту заголовка и фильтра */
        overflow-y: auto; /* Независимая прокрутка */
        border: 1px solid #ccc;
        padding: 10px;
    }

    a {
        color: black; /* Чёрный цвет текста */
        text-decoration: none; /* Убираем подчёркивание */
    }

    a:hover, a:focus, a:active {
        color: black; /* Чёрный цвет при наведении и фокусе */
        text-decoration: none; /* Убираем подчёркивание */
    }
    .main-column {
        background-color: #f0f0f0; /* светло-серый фон */
        border: 2px solid #ccc;
        
        padding: 10px;
    }
    /* Плавное скрытие и отображение колонок */
    .tree-container {
        transition: all 0.5s ease;
    }

    .tree-container.hidden {
        display: none;
    }

    /* Чтобы остальные колонки можно было двигать */
    .tree-container.draggable {
        cursor: move;
    }
    /* Стили для модального окна */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 300px;
        border-radius: 5px;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

    .close:hover {
        color: black;
    }

    .settings-options {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .action-panel {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-bottom: 15px;
    }
    .action-panel {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
        padding: 8px 0;
        border-bottom: 1px solid #eee;
    }

    .action-link {
        color: #007bff;
        text-decoration: none;
        padding: 6px 12px;
        border-radius: 4px;
        transition: all 0.2s;
    }

    .action-link:hover {
        background-color: #f8f9fa;
        text-decoration: underline;
    }

    .action-button {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .action-button:hover {
        background-color: #218838;
    }

    #confirmLinkButton {
        display: none;
